@using PagedList.Mvc

@model PagedList.IPagedList<PhongKhamNhi.Models.Entities.BaiViet>

@{ ViewBag.Title = "Bài viết";
                Layout = "~/Areas/LeTan/Views/Shared/_Layout.cshtml"; }

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách bài viết</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid card card-outline card-info">
        <div class="form-search">
            @using (Html.BeginForm("Index", "BaiViet", FormMethod.Get, new { }))
            {
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-5">
                            <div class="">
                                <b>Tiêu đề</b>
                                <input type="text" class="form-control" name="tieuDe" placeholder="" value="@ViewBag.tieuDe" />
                            </div>
                        </div>

                        <div class="col-3">
                            <div class="">
                                <b>Từ ngày</b>
                                <input type="date" class="form-control" name="tu" value="@ViewBag.tu" />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="">
                                <b>Đến ngày</b>
                                <input type="date" class="form-control" name="den" value="@ViewBag.den" />
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="btn-search">
                                <button type="submit" class="btn btn-default btn-pro" title="Tìm kiếm" style="background-color: #2ea1f8; flex: auto; ">
                                    <i class="fa fa-search"></i>
                                </button>
                                <a href="~/LeTan/BaiViet/Index" class="btn btn-default btn-pro" title="Tải lại" style="background-color: #34a544">
                                    <i class="fas fa-sync-alt"></i>
                                </a>
                            </div>
                        </div>

                    </div>

                </div>
            </div> }
        </div>

        @using (Html.BeginForm("Index", "LeTanHome", FormMethod.Post, new { }))
        {
    <div class="row">
        <div class="col-md-6">
            <a href="~/LeTan/BaiViet/Create" class="create-new">
                <i class="fas fa-plus"></i>
                Thêm mới
            </a>

        </div>
        <div class="col-md-6">
            @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum, @tieuDe = @ViewBag.tieuDe, @tu = @ViewBag.tu, @den = @ViewBag.den }))
        </div>
    </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Mã
                            </th>
                            <th class="text-center">
                                Tiêu đề
                            </th>
                            <th class="text-center">
                                Ảnh đại diện
                            </th>
                            <th class="text-center">
                                Thời gian tạo
                            </th>
                            <th class="text-center">
                                <i class="fas fa-cogs"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td class="text-center">
                                @item.MaBaiViet
                            </td>
                            <td>
                                <a href="~/News/Detail/@item.MaBaiViet">@item.TieuDe</a>
                            </td>
                            <td class="text-center">
                                <img src="/Content/assets/img/blog/@item.AnhDaiDien" style="width: 80px;" />
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ThoiGianTao)
                            </td>

                            <td class="text-center">
                                <a href="~/LeTan/BaiViet/Edit/@item.MaBaiViet" title="Sửa">
                                    <i class="fas fa-edit" aria-hidden="true"></i>
                                </a>

                                <a href="~/LeTan/BaiViet/Delete/@item.MaBaiViet" title="Xóa" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                    <i class="fas fa-trash-alt" style="color:red;"></i>
                                </a>
                            </td>
                        </tr>}
                    </tbody>
                </table>}
        <p class="text-center" style="margin: 0; padding-bottom: 4px;">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>

    </div>
</section>






