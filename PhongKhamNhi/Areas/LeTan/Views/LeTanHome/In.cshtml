@model PhongKhamNhi.Models.Entities.PhieuDangKyKham

@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Phiếu đăng ký khám</title>
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Content/dist/css/adminlte.min.css">
    <!-- css_custom -->
    <link href="~/Areas/Content/css_custom_admin.css" rel="stylesheet" />
    <style>
        .table-sign, .table-sign tr, .table-sign td {
            border: none;
        }

            .table-sign th {
                border: none;
                background-color: #e9ecef00;
            }

            .table-sign.table-infor td {
                vertical-align: top !important;
            }
    </style>
</head>
<body style="padding: 50px 100px;">
    <section class="content" style="width: 1200px; margin: auto;">
        <div class="row">
            <div class="col-12">
                <h2><b>PHÒNG KHÁM NHI MTA</b></h2>
                <p>Địa chỉ: 236 Hoàng Quốc Việt, Bắc Từ Liêm, Hà Nội</p>
                <p>Điện thoại: 1900 1009</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <h1>PHIẾU ĐĂNG KÝ KHÁM</h1>
                    <p>Ngày in: @ViewBag.ngay</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-sign table-infor">
                    <tbody>
                        <tr>
                            <td style="width: 180px;">
                                <p>Họ tên bệnh nhi:</p>
                                <p>Ngày sinh:</p>
                                <p>SĐT thân nhân:</p>
                                <p>Bác sĩ hẹn khám:</p>
                                <p>Chi nhánh:</p>
                                <p>Lời nhắn:</p>
                            </td>

                            <td>
                                <p>@Model.BenhNhi.HoTen</p>
                                <p>@Model.BenhNhi.NgaySinh.ToString("dd/MM/yyyy")</p>
                                <p>@Model.BenhNhi.SdtThanNhan</p>
                                <p>@Model.BacSi.HoTen</p>
                                <p>@Model.ChiNhanh.TenChiNhanh</p>
                                <p>@Model.LoiNhan</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <hr />
        </div>

    </section>
</body>
</html>



