@model PhongKhamNhi.Models.Entities.XetNghiem

@{
    ViewBag.Title = "Chi tiết xét nghiệm";
    Layout = "~/Areas/NvXn/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết xét nghiệm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Danh sách xét nghiệm", "Index", "XetNghiem")
                    </li>
                    <li class="breadcrumb-item active">Chi tiết xét nghiệm</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Edit", "XetNghiem", FormMethod.Post, new { }))
    {
        @Html.HiddenFor(model => model.MaXN)
        <div class="row">
            <div class="col-md-12">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h4 class="">
                            Thông tin chính
                        </h4>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-md-2">
                                Tên xét nghiệm:
                                <i class="fas fa-asterisk"></i>
                            </label>
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.TenXN, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.TenXN, "", new { @class = "text-danger" })
                            </div>
                            <label class="col-md-2 text-right">
                                Đơn giá:
                                <i class="fas fa-asterisk"></i>
                            </label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2">
                                Trị số bình thường:
                                <i class="fas fa-asterisk"></i>
                            </label>
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.TriSoBinhThuong, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.TriSoBinhThuong, "", new { @class = "text-danger" })
                            </div>
                            <label class="col-md-2 text-right">
                                Đơn vị tính:
                                <i class="fas fa-asterisk"></i>
                            </label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.DonViTinh, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.DonViTinh, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button type="submit" id="Submit" name="Submit" class="btn btn-block btn-success btn-lg">
                                                <i class="ace-icon fa fa-check"></i>
                                                Cập nhật
                                            </button>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="reset" class="btn btn-block btn-info btn-lg">
                                                <i class="fas fa-sync"></i>
                                                Nhập lại
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div> <!-- ./row -->
    }
</section>