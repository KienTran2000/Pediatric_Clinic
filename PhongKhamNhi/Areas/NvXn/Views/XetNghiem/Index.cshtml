@using PagedList.Mvc

@model PagedList.IPagedList<PhongKhamNhi.Models.Entities.XetNghiem>

@{ ViewBag.Title = "Danh sách xét nghiệm";
                Layout = "~/Areas/NvXn/Views/Shared/_Layout.cshtml"; }

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách xét nghiệm</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid card card-outline card-info">
        <div class="form-search">
            @using (Html.BeginForm("Index", "XetNghiem", FormMethod.Get, new { }))
            {
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-6">
                <div class="">
                    <b>Tên xét nghiệm</b>
                    <input type="text" class="form-control" name="ten" value="@ViewBag.ten">
                </div>
            </div>
            <div class="col-3">
                <div class="">
                    <b>Dịch vụ</b>
                    <select id="dichVu" class="form-control" name="dv">
                        <option value="0">- Chọn dịch vụ -</option>
                        @foreach (var item in ViewBag.ListDichVu)
                        {
                            if (@item.MaDV == ViewBag.dv)
                            {
        <option selected value="@item.MaDV">@item.TenDV</option>
 }
    else
    {
<option value="@item.MaDV">@item.TenDV</option>
}
}
                    </select>
                </div>
            </div>
            <div class="col-3">
                <div class="btn-search">
                    <button type="submit" class="btn btn-default btn-pro" title="Tìm kiếm" style="background-color: #2ea1f8; flex: auto; ">
                        <i class="fa fa-search"></i>
                        Tìm kiếm
                    </button>
                    <a href="~/Doctor/DoctorTest" class="btn btn-default btn-pro" title="Tải lại" style="background-color: #34a544">
                        <i class="fas fa-sync-alt"></i>
                        Tải lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>            }
        </div>
        @using (Html.BeginForm("Index", "XetNghiem", FormMethod.Post, new { }))
        {
<div>
    <div class="row">
        <div class="col-md-6">
            <a href="~/Admin/AdminTest/Create" class="create-new">
                <i class="fas fa-plus"></i>
                Thêm mới
            </a>
            <button type="submit" class="btn-delete" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                <i class="fa fa-trash-alt"></i>
                Xóa
            </button>
        </div>
        <div class="col-md-6">
            @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum, @ten = @ViewBag.ten, @dv = @ViewBag.dv }))
        </div>
    </div>
</div>
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center"><input type="checkbox" id="checkBoxAll" /></th>
                            <th class="text-center">Tên xét nghiệm</th>
                            <th class="text-center">Trị số bình thường</th>
                            <th class="text-center">Đơn vị tính</th>
                            <th class="text-center"><i class="fas fa-cogs"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
        <tr>
            <td class="text-center">
                <input type="checkbox" class="checkBoxId" value="@item.MaXN" name="checkBoxId" />
            </td>
            <td>@Html.DisplayFor(modelItem => item.TenXN)</td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.TriSoBinhThuong)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.DonViTinh)
            </td>
            <td class="text-center">
                <a href="~/NvXn/XetNghiem/Edit/@item.MaXN" title="Sửa">
                    <i class="fas fa-edit" aria-hidden="true"></i>
                </a>
                <a href="~/NvXn/XetNghiem/Delete/@item.MaXN" title="Xóa" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                    <i class="fas fa-trash-alt" style="color:red;"></i>
                </a>
            </td>
        </tr>}
                    </tbody>
                </table>}

    </div>
</section>

@section script{
    <script>$(document).ready(function () {
            $('#checkBoxAll').click(function () {
                if ($(this).is(":checked"))
                    $('.checkBoxId').prop('checked', true);
                else
                    $('.checkBoxId').prop('checked', false);
            });
        });</script>
}