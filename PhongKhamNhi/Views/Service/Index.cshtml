@using PagedList.Mvc

@model PagedList.IPagedList<PhongKhamNhi.Models.Entities.DichVuKham>

@{ ViewBag.Title = "Dịch vụ khám";


}

<div class="page-banner overlay-dark bg-image" style="background-image: url(/Content/assets/img/bg_image_1.jpg);">
    <div class="banner-section">

    </div> <!-- .banner-section -->
</div> <!-- .page-banner -->

<div class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    @foreach (var item in Model)
                    {
        <div class="col-sm-6 py-3">
            <div class="card-blog">
                <div class="header">
                    <div class="post-category">
                        <a href="#">Nổi bật</a>
                    </div>
                    <a href="#" class="post-thumb">
                        <img src="~/Content/assets/img/blog/@item.Anh" alt="">
                    </a>
                </div>
                <div class="body">
                    <h5 class="post-title"><a href="/Service/Detail/@item.MaDV">@item.TenDV</a></h5>
                </div>
            </div>
        </div>}
                </div> <!-- .row -->
                <div class="row">
                    <div class="col-12 text-center">
                        @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum }))
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="sidebar-block">
                        <h3 class="sidebar-title">Dịch vụ đăng ký nhiều nhất</h3>
                        @foreach (var item in ViewBag.lstDv)
                        {
                            <div class="blog-item">
                                <a class="post-thumb" href="">
                                    <img src="~/Content/assets/img/blog/@item.Anh" alt="">
                                </a>
                                <div class="content">
                                    <h5 class="post-title"><a href="/Service/Detail/@item.MaDV">@item.TenDV</a></h5>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div> <!-- .row -->
    </div> <!-- .container -->
</div> <!-- .page-section -->
