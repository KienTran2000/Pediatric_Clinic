@using PagedList.Mvc

@model PagedList.IPagedList<PhongKhamNhi.Models.Entities.BaiViet>

@{ ViewBag.Title = "Bài viết"; }

<div class="page-banner overlay-dark bg-image" style="background-image: url(/Content/assets/img/bg_image_1.jpg);">
    <div class="banner-section">

    </div> <!-- .banner-section -->
</div> <!-- .page-banner -->

<div class="page-section" style="padding-top: 20px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
        <div class="col-sm-4 py-3">
            <div class="card-blog">
                <div class="header">
                    <div class="post-category">
                        <a href="/News/Detail/@item.MaBaiViet">@item.ThoiGianTao</a>
                    </div>
                    <a href="/News/Detail/@item.MaBaiViet" class="post-thumb">
                        <img src="~/Content/assets/img/blog/@item.AnhDaiDien" alt="">
                    </a>
                </div>
                <div class="body">
                    <h5 class="post-title"><a href="/News/Detail/@item.MaBaiViet">@item.TieuDe</a></h5>
                </div>
            </div>
        </div>}
                </div> <!-- .row -->
                <div class="row">
                    <div class="col-12 text-center">
                        @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum }))
                    </div>
                </div>
            </div>
        </div> <!-- .row -->
    </div> <!-- .container -->
</div> <!-- .page-section -->
