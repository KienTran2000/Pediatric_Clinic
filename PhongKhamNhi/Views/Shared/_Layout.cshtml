                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Service">Dịch vụ khám</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/News">Bài viết</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Contact">Liên hệ</a>
                        </li>
                        @*<li class="nav-item">
            <a class="nav-link" href="/Login/Index">Trang quản trị</a>
        </li>*@
                        <li class="nav-item" style="position: relative;">
                            @{
                                if (Session["patient"] == null)
                                {
                                    <a href="/Patient/Login" class="btn btn-primary ml-lg-3">
                                        Đăng nhập
                                    </a>
                                    <a href="/Patient/Registrie" class="btn btn-primary ml-lg-3" style="background-color: #3b5998bf;">
                                        Đăng ký
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Session["fullname"]
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="/Patient">Thông tin tài khoản</a>
                                        @*<a class="dropdown-item" href="/Patient/Appointment">Đặt lịch hẹn khám</a>*@
