    <script src="~/Scripts/sweetalert2.all.min.js"></script>
    <script src="~/Scripts/js_custome.js"></script>

    <script>
        $(document).ready(function () {
            try {
                var url = window.location.pathname;
                var arr = url.split('/');
                var urlParent0 = "/" + arr[1];
                $('.nav-item').find('[href="' + urlParent0 + '"]').addClass('active');
                var urlParent = "/" + arr[1] + "/" + arr[2];
                $('.nav-item').find('[href="' + urlParent + '"]').addClass('active');
            } catch { }
        });

        document.getElementById("hen-kham").onclick = function () {
            if ('@Session["patient"]') {
                $.ajax({
                    url: "/Patient/CheckAppointment",
                    dataType: "json",
                    success: function (res) {
                        if (res.data)
                            MessageBox("Bạn đang có lịch hẹn chờ xác nhận. Trong thời gian này, bạn không thể thực hiện đặt thêm lịch hẹn. Chúng tôi sẽ liên hệ với bạn sớm nhất có thể!", "warning");
                        else
                            window.location = "/Patient/Appointment";
                    }
                });
            }
            else
                MessageBox("Bạn cần đăng nhập để thực hiện đặt lịch hẹn!", "error");
        };

    </script>

