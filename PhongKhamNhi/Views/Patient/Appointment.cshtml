                                            </span>}
                                    </td>
                                </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>*@
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-block btn-round" style="width: 30%; margin-left: 50%; transform: translateX(-50%);">Gửi yêu cầu</button>
    </div>
</div>
    }
</div>

@section scripts{
    <script>
        var checkT = false;

        $(document).ready(function () {
            $(document).on('input', '#ThoiGianHen', function () {
                $('#error-time')[0].style.display = "none";
                $('#ThoiGianHen').removeClass('bg-danger');
                const dt = new Date($(this).val());
                if (dt.getDay() == 0) {
                    $('#error-time')[0].style.display = "inline-block";
                    $('#ThoiGianHen').addClass('bg-danger');
                    checkT = false;
                }
                else
                    checkTime();
            });

            $(document).on('change', '#chiNhanh', getBacSi);
            $(document).on('change', '#bacSi', checkTime);
            $("input:radio").change(getBacSi);
        });

        function validateForm() {
            if (checkT == false) {
                alert("Bạn chưa chọn đủ thông tin. Vui lòng chọn lại!");
                return false;
            }
        }

        function getBacSi() {
            var maCn = $('#chiNhanh').val();
            var type = document.querySelector('input[name="type"]:checked').value;
            $.ajax({
                url: `/Patient/GetBacSiByCN?maCn=${maCn}&type=${type}`,
                dataType: "json",
                method: "GET",
                success: function (res) {
                    var markup = "<option value=\"0\">-- Chọn bác sĩ --</option>";
                    if (res.data.length > 0) {
                        checkT = true;
                        $('#bacSi').removeClass('bg-danger');
                        $('#ThoiGianHen').removeClass('bg-danger');
                        $('#gioHen').removeClass('bg-danger');
                        for (var i in res.data) {
                            markup += `<option value=\"${res.data[i].MaBS}\">${res.data[i].HocVi} ${res.data[i].HoTen}</option>`;
                        }
                    }
                    else {
                        checkT = false;
                        $('#bacSi').addClass('bg-danger');
                        $('#ThoiGianHen').addClass('bg-danger');
                        $('#gioHen').addClass('bg-danger');
                        markup = `<option value=\"0\">Không khả dụng</option>`;
                    }
                    $("#bacSi").html(markup);
                }
            });
        }

        function checkTime() {
            $.ajax({
                url: "/Patient/CheckTime",
                dataType: "json",
                method: "POST",
                data: {
                    time: $('#ThoiGianHen').val(),
                    bacSi: $('#bacSi').val(),
                    chiNhanh: $('#chiNhanh').val(),
                    type: document.querySelector('input[name="type"]:checked').value
                },
                success: function (res) {
                    var markup = "";
                    if (res.data.length > 0) {
                        checkT = true;
                        $('#bacSi').removeClass('bg-danger');
                        $('#ThoiGianHen').removeClass('bg-danger');
                        $('#gioHen').removeClass('bg-danger');
                        for (var i in res.data) {
                            markup += `<option value=\"${res.data[i]}\">${res.data[i]}</option>`;
                        }
                    }
                    else {
                        checkT = false;
                        $('#bacSi').addClass('bg-danger');
                        $('#ThoiGianHen').addClass('bg-danger');
                        $('#gioHen').addClass('bg-danger');
                        markup = `<option value=\"0\">Không khả dụng</option>`;
                    }
                    $("#gioHen").html(markup);
                }
            });
        }
    </script>
}