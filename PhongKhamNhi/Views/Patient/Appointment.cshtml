@model PhongKhamNhi.Models.Entities.BenhNhi

@{
    ViewBag.Title = "Đặt lịch hẹn";
}

<div class="container" style="padding: 20px;">
    <h4 class="text-center">Đăng ký hẹn khám</h4>
    @using (Html.BeginForm("Appointment", "Patient", FormMethod.Post, new { @id = "frm-res", @onsubmit = "return validateForm()" }))
    {
<div class="form-horizontal">
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                @Html.HiddenFor(model => model.MaBN)
                <label class="control-label col-md-12">Họ tên bệnh nhi:&emsp; @Model.HoTen</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label col-md-12">Giới tính: </label> @Model.GioiTinh
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label col-md-12">Ngày sinh: </label>@Model.NgaySinh.ToString("dd/MM/yyyy")
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label class="control-label col-md-12">Chọn chi nhánh</label>
                <div class="col-md-12">
                    <select id="chiNhanh" class="form-control" name="chiNhanh">
                        @foreach (var item in ViewBag.ListChiNhanh)
                        {
                            <option value="@item.MaChiNhanh">@item.DiaChi</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label class="control-label col-md-12">Hình thức khám bệnh</label>
                <div class="col-md-6">
                    <input class="radioGender" id="type0" name="type" type="radio" value="0" checked />
                    <label for="type0">Khám tại phòng khám</label>
                </div>
                <div class="col-md-6">
                    <input class="radioGender" id="type1" name="type" type="radio" value="1"/>
                    <label for="type1">Khám tại nhà</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label class="control-label col-md-12">Chọn bác sĩ</label>
                <div class="col-md-12">
                    <select id="bacSi" class="form-control" name="bacSi">
                        <option value="0">-- Chọn bác sĩ --</option>
                        @foreach (var item in ViewBag.ListBacSi)
                        {
                            <option value="@item.MaBS">@item.HocVi @item.HoTen</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label col-md-12">Ngày hẹn</label>
                <div class="col-md-12">
                    <input id="ThoiGianHen" name="ThoiGianHen" class="form-control" type="date" value="@ViewBag.tgmin" min="@ViewBag.tgmin" required />
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label col-md-12">Giờ hẹn</label>
                <div class="col-md-12">
                    <select id="gioHen" class="form-control" name="gioHen">
                        <option value="0">-- Giờ hẹn khám --</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-5"></div>
        <div class="col-7">
            <span style="color: gray; font-size: 13px; float: right; margin-right: 13px;">(*) Thời gian hẹn có sẵn phụ thuộc vào lượng bệnh nhi đã đăng ký khám ngày hôm đó.</span>
            <i id="error-time" class="error-time bg-danger"><b>Thời gian hẹn khám của phòng khám từ thứ 2 đến thứ 7 hàng tuần!</b></i>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label class="control-label col-md-12">Lời nhắn</label>
                <div class="col-md-12">
                    <textarea class="form-control" name="loiNhan" rows="3"></textarea>
                </div>
            </div>
        </div>
    </div>
